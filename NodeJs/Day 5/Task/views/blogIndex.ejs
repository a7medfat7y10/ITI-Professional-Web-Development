<%- include('./includes/head.ejs') %>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css"/>
</head>
<body>
<%- include('./includes/navigation.ejs') %>
<main>
    <% if(Posts.length > 0) {%>
    <div class="container">
        <% for (let post of Posts) { %>
        <div class="well">
            <div class="media">
    
                <div class="media-body">
                  <h4 class="media-heading"><%= post.blogPostTitle%></h4>
                <p class="text-right">By <%= post.userId.email%> </p>
                <p><%= post.blogPostBody%></p>
                <ul class="list-inline list-unstyled">
                    <li><span><i class="glyphicon glyphicon-calendar"></i> <%= post.blogPostDate%> </span></li>   
                  <li>|</li>
                  <li>
                  <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
                    <span><i class="fa fa-facebook-square"></i></span>
                    <span><i class="fa fa-twitter-square"></i></span>
                    <span><i class="fa fa-google-plus-square"></i></span>
                  </li>
                  <li>|</li>
                  <li><span><a class="btn btn-primary" href="/editpost/<%= post._id%>" >Edit</a></span></li>
                  <li>|</li>
                  <form style="display:inline" action="/deletepost" method="POST">
                    <input type="hidden" value="<%= post._id %>" name="blogPostId">
                    <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
                  </ul>
             </div>
          </div>
        </div>
        <% } %>
      </div>
      <%} else {%>
        <h1>No Posts Found!</h1>
        <% } %>
</main>

<%- include('./includes/end.ejs') %>
